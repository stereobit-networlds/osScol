fun getColor(s, z)=
  let strfind ">" s 1 -> r in
  if r != nil then
    let substr s 1 r-1 -> login in
    if !strcmp login DMSlogin then
      color
    else
     getColor2 cliColor login z
  else
    z.D_color;;

