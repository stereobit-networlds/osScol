  let getView3dSize w3d -> [w3 h3] in
  let _CRbitmap _channel 100 100 -> fond in    /* background du chat */  
  let mkData[100 100 200 200 BubbleFontName BubbleFontSize 0 BubbleFontColor 1 fond] -> z in 

