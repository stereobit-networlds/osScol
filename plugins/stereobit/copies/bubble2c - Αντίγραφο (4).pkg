/* CustomLineExtr */
fun CustomLineExtr (s) =
  let strfind "\\n" s 0 -> pos in
  (
    if pos == nil then
      s::nil
    else
      (substr s 0 pos)::( CustomLineExtr substr s (pos+3) ((strlen s)-pos-3) )
  )
